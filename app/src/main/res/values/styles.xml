<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="searchButtonTextStyle">@style/SearchButtonTextAppearance</item>
        <item name="gameListItemNameTextStyle">@style/GameListItemTextAppearance</item>

        <item name="android:windowBackground">@color/windowBackground</item>

    </style>

    <!--
        Search Button styling
    -->
    <style name="Base.Widget.AppCompat.Button.SearchButton">
        <item name="android:background">@null</item>
        <item name="android:id">@id/id_search_button</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="SearchButtonTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/string_search</item>
    </style>

    <style name="GameListTextStyle">
        <item name="android:background">@drawable/background_rectangle_scrim</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GameListItemTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_rectangle_scrim</item>
        <item name="android:text">""</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.QueryDialog">
        <item name="android:windowBackground">@null</item>
    </style>

</resources>
