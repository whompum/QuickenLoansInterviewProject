<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/id_local_search_editor"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_screen_padding_default"
        android:layout_marginEnd="@dimen/dimen_screen_padding_default"
        android:background="@android:color/transparent"
        android:hint="@string/string_enter_query_hint"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:maxWidth="240dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/id_local_search_editor"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/id_local_button"
        android:layout_marginEnd="@dimen/dimen_screen_padding_default"
        android:textColor="@android:color/white"
        android:text="@string/string_search"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="76dp" />

</androidx.constraintlayout.widget.ConstraintLayout>