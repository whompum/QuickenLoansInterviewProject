<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="200dp"
    tools:layout_height="200dp"
    android:layout_width="0dp"
    android:layout_height="0dp">

    <!--
        Width and Height for this view is set during Runtime
    -->

    <ImageView
        android:id="@+id/id_local_image_container"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        tools:text="OverWatch"
        style="@style/GameListTextStyle"
        android:textAppearance="?attr/gameListItemNameTextStyle"
        android:id="@+id/id_local_title"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>